<Card>
  <form class='new-quote-form' {{on 'submit' this.submitFormHandler}}>
    {{#if @isLoading}}
      <div class='loading'>
        <LoadingSpinner />
      </div>
    {{/if}}
    <div class='control'>
      <label htmlFor='author'>Author</label>
      <input {{on 'input' this.updateAuthor}} type='text' id='author' />
    </div>
    <div class='control'>
      <label htmlFor='text'>Text</label>
      <textarea {{on 'input' this.updateQuote}} id='text' rows='5'></textarea>
    </div>
    <div class='actions'>
      <button type='submit' class='btn'>
        Add Quote
      </button>
    </div>
  </form>
</Card>